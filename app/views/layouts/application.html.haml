!!!
%html
%head
	%title NoteNote
	
	= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
	= javascript_include_tag "application", "data-turbolinks-track" => true
	= csrf_meta_tags

%body
	%nav.navbar.navbar-default
		.container
			.navbar-header
				= link_to "Rails Note", root_path, class: "navbar-brand"

			- if !user_signed_in?		
				= link_to "Sign up", new_user_registration_path, class: "navbar-text navbar-right navbar-link"
				= link_to "Sign in", new_user_session_path, class: "navbar-text navbar-right navbar-link"
			- else
				%nav.navbar-right
					= link_to "New Note", new_note_path, class: "navbar-text navbar-link"
					= link_to "Logout", destroy_user_session_path, method: :delete, class: "navbar-text navbar-link"
	.container
		.notice= notice
		.alert= alert
		= yield